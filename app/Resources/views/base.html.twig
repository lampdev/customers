<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            <link rel="stylesheet" href="{{ asset('css/bootstrap.css') }}">
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
    {% block javascripts %}
         <script src="{{ asset('js/jquery-2.1.0.min.js') }}"></script>
        <script src="{{ asset('js/bootstrap.js') }}"></script>
    {% endblock %}
    <nav class="navbar navbar-inverse" role="navigation">
        <div class="container-fluid">
            <div class="navbar-header">
                <a class="navbar-brand" href="/app_dev.php/">Home</a>
            </div>
            <div class="collapse navbar-collapse">
                <ul class="navbar-text navbar-right">
                {% if is_granted("IS_AUTHENTICATED_FULLY")%}
                <div>
                    <ul class="dropdown">Signed in as
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown">
                           {{app.user.username}} 
                           <b class="caret"></b>
                        </a>
                        <ul class="dropdown-menu">
                           <li><a href="{{ path('fos_user_profile_show')}}">Profile</a></li>
                           <li class="divider"></li>
                           <li><a href="{{ path('fos_user_security_logout')}}">Logout</a></li>
                        </ul>
                    </ul>
                </div>
                {%else%}
                    <a role="button" href="{{ path('fos_user_security_login')}}" class="btn btn-success">Login</a>
                    <a role="button" href="{{ path('fos_user_registration_register')}}" class="btn btn-default">Registration</a>
                {% endif %}
                </ul>
            </div>
        </div>
    </nav>
        {% block body %}{% endblock %}
    </body>
</html>


